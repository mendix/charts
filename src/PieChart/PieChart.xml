<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.PieChart.PieChart" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../xsd/widget.xsd">
    <name>Pie chart</name>
    <description>Renders a pie or donut chart</description>
    <icon/>
    <properties>
        <property key="dataEntity" type="entity">
            <caption>Data entity</caption>
            <category>Data source</category>
            <description>The entity from which the data values will be retrieved</description>
        </property>
        <property key="dataSourceType" type="enumeration" defaultValue="XPath">
            <caption>Data source</caption>
            <category>Data source</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="XPath">Database / XPath</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="entityConstraint" type="entityConstraint" entityProperty="dataEntity" required="false">
            <caption>XPath constraint</caption>
            <category>Data source</category>
            <description>Constraint on the data from the data entity (used when data soucre is Database/XPath)</description>
        </property>
        <property key="dataSourceMicroflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Data source</category>
            <description>Returns a list of data values</description>
            <returnType type="Object" entityProperty="dataEntity" isList="true"/>
        </property>
        <property key="nameAttribute" type="attribute" entityProperty="dataEntity">
            <caption>Name attribute</caption>
            <category>Data source</category>
            <description>Attribute containing the name describing the value</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="valueAttribute" type="attribute" entityProperty="dataEntity">
            <caption>Value attribute</caption>
            <category>Data source</category>
            <description>Attribute containing the value</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Decimal"/>
                <attributeType name="Long"/>
            </attributeTypes>
        </property>
        <property key="chartType" type="enumeration" defaultValue="pie">
            <caption>Chart type</caption>
            <category>Appearance</category>
            <description>Type of chart</description>
            <enumerationValues>
                <enumerationValue key="pie">Pie</enumerationValue>
                <enumerationValue key="doughnut">Doughnut</enumerationValue>
            </enumerationValues>
        </property>
        <property key="colorAttribute" type="attribute" entityProperty="dataEntity" required="false">
            <caption>Color attribute</caption>
            <category>Appearance</category>
            <description/>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="showToolBar" type="boolean" defaultValue="false">
            <caption>Show toolbar</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="showLegend" type="boolean" defaultValue="true">
            <caption>Show legend</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="responsive" type="boolean" defaultValue="true">
            <caption>Responsive</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="percentage">Percentage</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Chart width</caption>
            <category>Appearance</category>
            <description>Width of the chart</description>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="percentageOfWidth">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description>'Percentage of width' is the aspect ratio, 'Pixels' is absolute. Warning: the 'Percentage of parent' only works when the parent has an absolute height, else it will not display</description>
            <enumerationValues>
                <enumerationValue key="percentageOfWidth">Percentage of width</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentageOfParent">Percentage of parent</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="100">
            <caption>Chart height</caption>
            <category>Appearance</category>
            <description>Height of the chart</description>
        </property>
    </properties>
</widget>
